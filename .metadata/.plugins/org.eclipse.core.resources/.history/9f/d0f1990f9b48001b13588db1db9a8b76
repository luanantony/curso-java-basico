package com.luan.cursojava.aula17.labs;

import java.util.Scanner;

public class Exer30 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);

		int valor1 = 0;
		int valor2 = 0;
		int valor3 = 0;
		int resultado = 0;

		boolean invalido = false;
		
		do {
			
			System.out.println("Montar a tabuada de: ");
			valor3 = scan.nextInt();
			
			System.out.println("Começar por: ");
			valor1 = scan.nextInt();
			
			System.out.println("Terminar em: ");
			valor2 = scan.nextInt();
			
			if (valor2 > valor1) {
				invalido = true;
			}
			
			
		} while (!invalido);
		
		System.out.println(
				"Vou montar a tabuada de: " + valor3 + " começando em " + valor1 + " e terminando em " + valor2 + ": ");

		for (int i = valor1; i <= valor2; i++) {

			resultado = i * valor3;

			System.out.println(valor3 + " X " + i + " = " + resultado);

		}
		scan.close();
	}

}
