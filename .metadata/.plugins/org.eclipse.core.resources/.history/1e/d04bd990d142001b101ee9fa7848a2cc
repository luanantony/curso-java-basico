package com.luan.cursojava.aula17.labs;

import java.util.Scanner;

public class Exer21 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);

		System.out.println("Entre com o número de turmas: ");
		int numTurmas = scan.nextInt();

		int numAlunos;
		int soma = 0;
		boolean invalido = false;

		for (int i = 1; i <= numTurmas; i++) {
			do {
				System.out.println("Entre com o número de alunos da turma" + i);
				numAlunos = scan.nextInt();

				if (numAlunos > 40) {
					invalido = true;

				}else {
					System.out.println("Número de alunos inválido.");
				}
			} while (invalido);
			
			soma += numAlunos;
		}
		double media = soma / numTurmas;
		System.out.println("Média: " + media);

		scan.close();

	}

}
